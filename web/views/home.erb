void mouseClicked(){
  var radius = 200 + 10*sin( frameCount / 2 );
	X = mouseX;
	Y = mouseY;
	bubbles[bubble_count] = new Bubble( radius);
	alert(bubble_count);
	bubble_count = bubble_count +1;
}
